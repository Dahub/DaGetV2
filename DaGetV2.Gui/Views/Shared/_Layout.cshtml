<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8">
    <meta name="description" content="Logiciel de gestion de compte">
    <meta name="author" content="Dahub">
    <title>DaGet</title>
    @await Html.PartialAsync("_css")
    @RenderSection("Css", required: false)
</head>
<body>

    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/Home/Index" class="brand-logo">&nbsp;DaGet - V2</a>
                <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a href="/Home/Logout" class="waves-effect waves-light btn-large">
                            Déconnexion<i class="material-icons right">account_circle</i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <ul id="slide-out" class="sidenav sidenav-fixed">
            <li>
                <div class="background">
                    <img src="/img/upper_left.png">
                </div>
            </li>
            <li><a class="subheader">Gestion des comptes</a></li>
            <li><a href="/Home/Index"><i class="material-icons">euro</i>Liste</a></li>
            <li><a href="/BankAccount/Create"><i class="material-icons">location_city</i>Créer nouveau</a></li>
            <li>
                <div class="divider"></div>
            </li>
            <li><a class="subheader">Opérations</a></li>
            <li><a href="#!"><i class="material-icons">compare_arrows</i>Virement</a></li>
            <li>
                <div class="divider"></div>
            </li>
            <li><a href="#!"><i class="material-icons">insert_chart</i>Statistiques</a></li>
            <li><a href="#!"><i class="material-icons">build</i>Options</a></li>
        </ul>

    </header>

    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    @await Html.PartialAsync("_footer")

    @await Html.PartialAsync("_scripts")
    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $('.sidenav').sidenav();
        });
    </script>

</body>
</html>
