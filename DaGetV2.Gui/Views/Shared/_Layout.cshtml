<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8">
    <meta name="description" content="Logiciel de gestion de compte">
    <meta name="author" content="Dahub">
    <title>DaGet</title>
    @await Html.PartialAsync("_css")
    @RenderSection("Css", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="/Home/Index">DaGet - v2</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Déconnecter", "Logout", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>

    </nav>

    <main role="main" class="container" style="margin-top:80px">
        @RenderBody()
    </main>

    <br />
    <hr />

    @await Html.PartialAsync("_scripts")
    @RenderSection("Scripts", required: false)
</body>
</html>
