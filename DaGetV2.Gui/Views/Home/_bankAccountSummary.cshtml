@model IEnumerable<BankAccountSummary>

@if (Model.Any())
{
    foreach (var bankAccount in Model)
    {
        <a href="/BankAccount/Detail/@bankAccount.Id">
            <div class="row">
                <div class="col s12 m12">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">@Html.Euro(bankAccount.Balance)</span>
                            <p>@bankAccount.Wording</p>
                        </div>
                        <div class="card-action">
                            <a href="/BankAccount/Edit/@bankAccount.Id">Editer</a>
                            <a href="/BankAccount/Share/@bankAccount.Id">Partager</a>
                            <a href="/BankAccount/Delete/@bankAccount.Id">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
}
else
{
    <h6>Aucun compte</h6>
}